@model IEnumerable<KilometroZero7.Models.Prodotti>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="~/Prodottis/Create" class="btn btn-primary"><span class="badge">@ViewBag.ProdottiCount</span> Nuovo</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome_categoria.nome_categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.attivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nome_prodotto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descrizione_prodotto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prezzo_prodotto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome_categoria.nome_categoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.attivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nome_prodotto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descrizione_prodotto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prezzo_prodotto)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.prodotto_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.prodotto_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.prodotto_id })
        </td>
    </tr>
}

</table>
